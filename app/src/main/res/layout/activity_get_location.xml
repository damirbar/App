<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.damir.firstapp.GetLocation">


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:context="com.example.damir.firstapp.GetLocation" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="Back"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp" />

    <TextView
        android:id="@+id/branches"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:background="@android:color/white"
        android:text="Branches"
        android:textAlignment="center"

        android:textSize="24sp"
        android:layout_below="@+id/back_button"
        android:layout_alignStart="@+id/back_button" />

    <Button
        android:id="@+id/jrslm_btn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/branches"
        android:layout_below="@+id/branches"
        android:layout_marginTop="20dp"
        android:text="Jerusalem" />

    <Button
        android:id="@+id/pth_tikwa_btn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Petah Tikwa"
        android:layout_below="@+id/jrslm_btn"
        android:layout_alignStart="@+id/jrslm_btn" />

    <Button
        android:id="@+id/tlv_btn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="Tel-Aviv"
        android:layout_below="@+id/pth_tikwa_btn"
        android:layout_alignStart="@+id/pth_tikwa_btn" />

